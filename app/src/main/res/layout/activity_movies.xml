<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="libanthedev.ultimatequiz.Math"
    android:background="@drawable/sunsetsinstagram">


    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="107dp"
        android:id="@+id/truebutton"
        android:text="True"

        fbutton:buttonColor="@color/color_green_sea"
        fbutton:shadowColor="@color/color_green_sea"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        />
    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/truebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/falsebutton"
        android:text="False"

        fbutton:buttonColor="@color/color_orange"
        fbutton:shadowColor="@color/color_orange"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_toStartOf="@+id/falsebutton"
        android:layout_toLeftOf="@id/falsebutton"
        android:layout_toEndOf="@+id/truebutton"
        android:layout_toRightOf="@+id/truebutton"
        android:layout_marginTop="148dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/falsebutton"
        android:layout_alignEnd="@+id/falsebutton"
        android:layout_marginRight="41dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30sp"

        android:gravity="right"
        android:id="@+id/scoreText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/falsebutton"
        android:layout_alignStart="@+id/falsebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
